generator client {
    provider = "prisma-client-js"
}

generator zod {
    provider = "zod-prisma-types"
    output   = "../src/types/zod"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

enum UserRoles {
    student
    teacher
    parent
    admin
}

model User {
    id       String    @id @default(cuid())
    role     UserRoles
    username String    @unique /// @zod.string.min(6, { message: "short-input" }).max(16, { message: "long-input" })
    password String /// @zod.string.min(6, { message: "short-input" }).max(16, { message: "long-input" })
}

model GalleryFolder {
    id        String         @id @default(cuid())
    name      String         @unique
    thumbnail String
    images    GalleryImage[]
    createdAt DateTime       @default(now())
    updatedAt DateTime       @updatedAt

    @@index([name])
}

model GalleryImage {
    id        String        @id @default(cuid())
    filename  String
    folder    GalleryFolder @relation(fields: [folderId], references: [id])
    folderId  String
    createdAt DateTime      @default(now())
    updatedAt DateTime      @updatedAt

    @@unique([filename, folderId])
    @@index([folderId])
}
